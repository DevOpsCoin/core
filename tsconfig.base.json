{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@contracts/*": ["contracts/*"],
      "@docs/*": ["docs/*"],
      "@/*": ["apps/website/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}

