{
  "name": "devopscoin",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for DevOpsCoin â€” website and smart contracts",
  "scripts": {
    "dev": "pnpm --filter website dev",
    "build": "pnpm --filter website build && pnpm --filter contracts build",
    "lint": "pnpm exec eslint . --ext .ts,.tsx",
    "lint:fix": "pnpm exec eslint . --ext .ts,.tsx --fix",
    "deploy": "pnpm --filter contracts deploy",
    "test": "pnpm --filter contracts test",
    "format": "pnpm exec prettier --write ."
  },
  "workspaces": [
    "apps/*",
    "contracts"
  ],
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.6",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}

