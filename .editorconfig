# .editorconfig — Consistent formatting across editors
# This complements ESLint v9 + Prettier v3 + Husky setup in DevOpsCoin

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Match Prettier’s defaults
max_line_length = 80
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.tsx]
indent_size = 2

[*.ts]
indent_size = 2

[Makefile]
indent_style = tab

